{% if app.session.flashBag.peek('flash_message')|length > 0 or  app.session.flashBag.peek('flash_message_error')|length > 0 %}
        <div class="row pt-1">
            <div class="col-xl-8">
                {% if app.session.flashBag.peek('flash_message')|length > 0%}
                    <div class="alert alert-success" role="alert">
                        {% for message in app.flashes('flash_message') %}
                            <div>{{ message }}</div>
                        {% endfor %}
                    </div>
                {% elseif app.session.flashBag.peek('flash_message_error')|length > 0 %}
                    <div class="alert alert-warning" role="alert">
                        {% for message in app.flashes('flash_message_error') %}
                            <div>{{ message }}</div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
{% endif %}