{% extends 'base.html.twig' %}

{% block title %}Регистрация на BlaBlaArticle{% endblock %}

{% block content_class %} class="signin-body"{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Подтверждение регистрация</h5>
                        <div class="alert alert-warning" role="alert">
                            Ссылка подтверждение E-mail не действительна. Вы можете зарегистрироваться <a href="{{ path('app_register') }}">заново</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}